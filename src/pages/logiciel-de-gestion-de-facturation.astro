---
import Layout from "../layouts/Layout.astro";
import StarterPage from "../components/starter-page.astro";

const benefits = [
    {
        text: "Facturation rapide et sans erreur",
        icon: "bi-lightning", // or "bi-receipt"
    },
    {
        text: "Suivi en temps réel des paiements", 
        icon: "bi-eye", // or "bi-graph-up"
    },
    {
        text: "Meilleure organisation client",
        icon: "bi-people", // or "bi-person-gear"
    },
    {
        text: "Gain de temps administratif",
        icon: "bi-clock", // or "bi-gear"
    },
];

const hero = [
    {
        text: "Simplifiez votre facturation professionnelle",
        description:
            "Créez, envoyez et suivez vos factures facilement grâce à une plateforme sécurisée et intuitive. Centralisez toutes les informations clients et produits pour un suivi précis et rapide. Automatisez vos relances et assurez la conformité de vos documents pour limiter les erreurs et retards de paiement. Obtenez une vision claire de vos revenus et paiements en temps réel et gagnez du temps sur la gestion administrative. Profitez d’un outil accessible sur tous vos appareils, qui vous accompagne dans la croissance et la gestion efficace de votre activité.",
    },
];

const features = [
    {
        feature: "Tableau de bord",
        desc: "Aperçu des paiements et revenus.",
        icon: "bi-speedometer2", // or "bi-bar-chart-line"
    },
    {
        feature: "Clients",
        desc: "Centralisation des informations et historique.",
        icon: "bi-people", // or "bi-person-lines-fill"
    },
    {
        feature: "Produits",
        desc: "Gestion des articles et tarifs.",
        icon: "bi-box", // or "bi-tags"
    },
    {
        feature: "Factures",
        desc: "Création et envoi automatisés.",
        icon: "bi-receipt", // or "bi-envelope"
    },
];

const why = [
    {
        sectionTitle: "Pourquoi choisir notre solution de facturation",
        items: [
            "Sécurité et conformité garanties",
            "Interface simple et intuitive", 
            "Accessible sur tous les appareils",
        ],
    },
];

const cta = "Gagnez du temps et automatisez votre facturation !";
---

<Layout
websiteTitle="Logiciel de gestion de facturation - Brosmedia Digital : Solutions logicielles de gestion pour les entreprises au Maroc">
    <main class="main">
        <StarterPage
            title="Logiciel de gestion de facturation"
            benefits={benefits}
            hero={hero}
            features={features}
            why={why}
            cta = {cta}
        />
    </main>
</Layout>
