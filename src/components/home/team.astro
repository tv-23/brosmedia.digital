      },
      'mercedes': {
          heading: "AUTOMOTIVE",
          name: "JOHANN KREIS",
          title: "Head of Digital Transformation, Mercedes-Benz",
          quote: "The platform helped us reduce development cycles by 40% and improved cross-team collaboration significantly.",
          caseStudy: "Read Mercedes-Benz's case study →",
          image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80",
